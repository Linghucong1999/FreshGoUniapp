	/* 浏览器 */
.container{
		display: flex;
		flex-direction: row;
		margin-top: 20px;
		margin-left: 20px;
		position: relative;
}
.container-image{
		width: 350rpx;
		height: 250rpx;
		margin-right: 10px;
		border-radius: 10%;
		box-shadow: 0 1px 5px #939393;
}
.container-name{
		font-size: 36rpx;
		font-weight: bold;
		letter-spacing: 5rpx;
}
.container-icons{
		position: absolute;
		left: 360rpx;
		top: 50%;
}
.flexicons{
		margin-top: 50px;
		display: flex;
}
.flexicons-second{
		box-shadow: 0px -3px 5px #C7C7C7;
		border-radius: 30rpx 30rpx 0rpx 0rpx;
		display: flex;
		flex-wrap: wrap;
}
.flexicons-content{
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		margin: 20px 5px 10px 20px;
}
.flexicons-content-text{
		display: flex;
		justify-content: center;
		align-items: center;
		font-size: 24rpx;
		font-weight: bold;
		color: #8b8b8b;
}
	
